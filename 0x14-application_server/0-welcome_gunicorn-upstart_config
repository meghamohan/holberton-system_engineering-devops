# upstart file
description "Gunicorn application server running AirBnB"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid ubuntu
setgid www-data

env PATH=/home/ubuntu/AirBnB_clone_v2/web_flask/web_flask_env/bin
chdir /home/ubuntu/AirBnB_clone_v2/web_flask
exec gunicorn --workers 1 --bind 127.0.0.1:8001 0-hello_route:app
